<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.Papa_calculator" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Custom text style -->
    <style name="text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Custom button style -->

    <style name="ButtonStyle1" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/operators</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonStyle2" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/operator_top</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle3" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/col_numbers</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Papa_calculator" parent="Base.Theme.Papa_calculator" />
</resources>
